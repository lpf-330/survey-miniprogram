/* 标题样式 */
.title-input {
    font-size: 32rpx;
    padding: 30rpx;
    border-bottom: 2rpx solid #eee;
    margin-bottom: 20rpx;
  }
  
  /* 问题卡片 */
  .question-card {
    background: #fff;
    margin: 20rpx;
    padding: 20rpx;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  }
  
  /* 问题头部 */
  .question-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .type-tag {
    background: #e6f4ff;
    color: #1890ff;
    padding: 8rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
  }
  
  /* 选项管理 */
  .options-area {
    margin: 20rpx 0;
  }
  
  .option-item {
    display: flex;
    align-items: center;
    margin: 10rpx 0;
    position: relative;
  }
  
  .delete-option {
    color: #ff4d4f;
    font-size: 40rpx;
    padding: 0 20rpx;
    line-height: 1;
  }
  
  /* 操作按钮 */
  .question-actions {
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
    border-top: 1rpx solid #eee;
    padding-top: 20rpx;
  }
  
  .action-btn {
    color: #1890ff;
    font-size: 28rpx;
    padding: 10rpx 15rpx;
    border-radius: 6rpx;
  }
  
  .danger {
    color: #ff4d4f;
  }
  
  .move-btns {
    display: flex;
    gap: 20rpx;
  }
  
  /* 底部操作栏 */
  .footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    background: #fff;
    padding: 20rpx;
    box-shadow: 0 -2rpx 6rpx rgba(0,0,0,0.1);
    gap: 20rpx;
  }
  
  .add-btn {
    flex: 1;
    background: #f5f5f5;
    color: #333;
  }
  
  .save-btn {
    flex: 1;
    background: #07c160;
    color: white;
  }