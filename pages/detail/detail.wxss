.header {
    background: white;
    padding: 30rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .status-badge {
    display: inline-block;
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    margin-bottom: 20rpx;
  }
  
  .status-badge.draft { background: #f0f0f0; color: #666; }
  .status-badge.published { background: #e6f4ff; color: #1890ff; }
  .status-badge.closed { background: #fff2f0; color: #ff4d4f; }
  
  .title {
    font-size: 36rpx;
    display: block;
    margin: 15rpx 0;
  }
  
  .meta {
    color: #666;
    font-size: 24rpx;
    display: flex;
    justify-content: space-between;
  }
  
  .question-box {
    background: white;
    margin: 25rpx;
    padding: 25rpx;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08);
  }
  
  .q-header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .type-tag {
    font-size: 24rpx;
    color: #666;
    margin-left: 15rpx;
  }
  
  .options {
    margin: 20rpx 0;
  }
  
  .option-item {
    display: block;
    padding: 15rpx;
    border-bottom: 1rpx solid #f5f5f5;
  }
  
  .text-input {
    background: #f5f5f5;
    margin: 20rpx 0;
    padding: 20rpx;
  }
  
  .footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    padding: 20rpx;
    background: white;
    border-top: 1rpx solid #eee;
  }
  
  .share-btn {
    background: #07c160;
    color: white;
  }