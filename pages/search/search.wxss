/* 搜索栏样式 */
.search-bar {
    padding: 20rpx;
    background: #fff;
  }
  
  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }
  
  .search-input {
    flex: 1;
    height: 80rpx;
    padding: 0 30rpx;
    background: #f5f5f5;
    border-radius: 40rpx;
    font-size: 28rpx;
  }
  
  .clear-btn {
    position: absolute;
    right: 20rpx;
    font-size: 40rpx;
    color: #999;
    padding: 0 20rpx;
  }
  
  /* 搜索结果项 */
  .result-item {
    background: white;
    padding: 30rpx;
    margin: 20rpx;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  }
  
  .item-title {
    font-weight: bold;
    display: block;
    margin-bottom: 15rpx;
  }
  
  .meta-info {
    display: flex;
    justify-content: space-between;
    color: #666;
    font-size: 24rpx;
  }
  
  .match-count {
    color: #07c160;
  }
  
  /* 空状态提示 */
  .empty-tip {
    text-align: center;
    padding: 100rpx 0;
  }
  
  .empty-icon {
    font-size: 100rpx;
    display: block;
    margin-bottom: 30rpx;
  }
  
  .empty-text {
    color: #999;
    font-size: 28rpx;
  }
  
  /* 搜索提示 */
  .search-tips {
    padding: 40rpx;
  }
  
  .tag {
    display: inline-block;
    padding: 10rpx 20rpx;
    background: #f0f0f0;
    border-radius: 30rpx;
    margin: 10rpx;
    font-size: 28rpx;
    color: #666;
  }